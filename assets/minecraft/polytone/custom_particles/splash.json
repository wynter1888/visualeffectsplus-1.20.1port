{
  "render_type": "translucent",
  "rotation_mode": "look_at_xyz",
  "random_sprite": true,
  "offset": [0, 0, 0],
  "has_physics": true,
  "kill_on_contact": false,
  "kill_when_still": false,

  "initializer": {
    "lifetime": "10 + floor(rand() * 8)",
    "size": "0.08 + rand() * 0.06",
    "alpha": "0",
    "custom": "gaussian()"
  },

  "ticker": {
    "dx": "0.05 * cos(CUSTOM * 2*pi) - ((PLAYER_X - POS_X) / (DISTANCE_SQUARED + 1)) * min(max(2 - sqrt(DISTANCE_SQUARED), 0), 1) * 0.1",
    "dz": "0.05 * sin(CUSTOM * 2*pi) - ((PLAYER_Z - POS_Z) / (DISTANCE_SQUARED + 1)) * min(max(2 - sqrt(DISTANCE_SQUARED), 0), 1) * 0.1",

   "dy": "(0.5 + rand() * 0.5) * ( sin(pi * (AGE + 1) / LIFETIME) - sin(pi * AGE / LIFETIME) )",

    "alpha": "0.75 * min(max((LIFETIME - AGE) / 3, 0), 1)"
  },

  "particle_emitters": [
    {
      "particle": "water_splash:ripple",
      "chance": "1 - (AGE < 8)", 
      "x": "0.0",
      "y": "-0.05",
      "z": "0.0"
    }
  ]
}